<% content_for :title, "NWInspect - Contact Us" %>
<h1 class="section-heading text-center">How may we help you?</h1>

<div class="container">
	<div class="row">
		<div class="col-md-6">
			<%= simple_form_for(@contact, html: {class: "form-horizontal"}) do |f| %>
			  <% if @contact.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

			      <ul>
			      <% @contact.errors.full_messages.each do |msg| %>
			        <li><%= msg %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>
			  	<div class="form-group">
					<%= f.input :name, :input_html => {:minlength =>2,:style=> 'width: 400px', class: "form-control"} %>
				</div>
				<div class="form-group">
					<%= f.input :email, :input_html => {:style=> 'width: 400px', class: "form-control"} %>
				</div>
				<div class="form-group">
					<%= f.input :phone, :input_html => {:style=> 'width: 400px', class: "form-control"} %>
				</div>
				<div class="form-group">
					<%= f.input :additional_information, label: 'Question', :input_html => {:style=> 'width: 400px; height: 200px', class: "form-control"} %>
				</div>
			  <div class="form-actions">
			    <%= f.button :submit, 'Submit', :class => "btn btn-default" %>
			  </div>
			<% end %>
		</div>
	</div>
</div>